{
  "mcpServers": {
    "swarm-orchestrator": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "swarm-mcp-server",
        "fastmcp",
        "run",
        "server.py"
      ]
    },
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "mcp/github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    },
    "git": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount", "type=bind,src=${PWD},dst=/repo",
        "mcp/git"
      ]
    },
    "stitch": {
      "command": "npx",
      "args": [
        "-y",
        "@_davideast/stitch-mcp"
      ]
    }
  }
}
